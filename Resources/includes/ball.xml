<mujoco model="ball">
    <asset>
        <!-- need a correct texture -->
        <texture name="ball_tex" file="../textures/ball.png" type="2d"/>
        <material name="ball_mat" texture="ball_tex" texrepeat="1 1"  rgba="1 1 1 1"/>
    </asset>
    <worldbody>
        <body name="ball" pos="0 0 0.4">
            <freejoint/>

            <inertial mass="0.425" diaginertia="0.003585938 0.003585938 0.003585938" pos="0 0 0"/>
            <geom name="ball_geom" type="sphere" size="0.1125" 
                  material="ball_mat" condim="6" 
                  friction="0.8 0.005 0.0005"/>
            
            <!-- friction: [sliding_friction, torsional_friction, rolling_friction] -->
            <!-- sliding_friction: acting along both axes of the tangent plane -->
            <!-- torsional_friction: acting around the contact normal -->
            <!-- rolling_friction: acting around both axes of the tangent plane -->
            
            <!-- Size 5 ball (dimensions.com): -->
            <!-- Circumference: 68-70 cm -->
            <!-- Diamater: 22-23 cm -->
            <!-- Mass: 400-450 g -->
            <!-- Pressure: 58.6-107.6 kPa -->
            
            <!-- Inertia: not sure which one is better -->
            <!-- Spherical shell: (2/5)*m*r^2 = 0.002151562 -->
            <!-- Thin spherical shell: (2/3)*m*r^2 = 0.003585938 -->
        </body>
    </worldbody>
</mujoco>