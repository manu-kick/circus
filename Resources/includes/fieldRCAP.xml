<mujoco model="field">
    <asset>
        <texture name="soccer_field_tex" file="../textures/fieldRCAP.png" type="2d" />
        <material name="soccer_field_mat" texture="soccer_field_tex" texrepeat="1 1" rgba="1 1 1 1" />

        <texture name="goal_net_tex" file="../textures/net.png" type="2d" />
        <material name="goal_net_mat" texture="goal_net_tex" rgba="1 1 1 0.15"/>
    </asset>

    <worldbody>
        <geom name="ground" type="plane" pos="0 0 0" size="12 8 0.001"
              material="soccer_field_mat" condim="3" friction="0.8 0.1 0.1" />

        <body name="goal_left" pos="-11 0 0">

            <!-- front goal post -->
            <geom type="capsule" size="0.05 0.9"
                  fromto="0 -1.3 0 0 -1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.9"
                  fromto="0  1.3 0 0  1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.8"
                  fromto="0 -1.3 1.8 0 1.3 1.8" rgba="1 1 1 1"/>

            <!-- crossbar connectors -->
            <geom type="capsule" size="0.05 0.8"
                  fromto="0 -1.3 1.8 -0.6 -1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.8"
                  fromto="0 1.3 1.8 -0.6 1.3 1.8" rgba="1 1 1 1"/>

            <!-- back goal post -->
            <geom type="capsule" size="0.05 0.9"
                  fromto="-0.6 -1.3 0 -0.6 -1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.9"
                  fromto="-0.6  1.3 0 -0.6 1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.8"
                  fromto="-0.6 -1.3 1.8 -0.6 1.3 1.8" rgba="1 1 1 1"/>

            <geom name="net_back_L" type="box" size="0.01 1.3 0.9"
                  pos="-0.6 0 0.9" material="goal_net_mat"
                  contype="0" conaffinity="0"/>
            <geom name="net_sideL_L" type="box" size="0.3 0.01 0.9"
                  pos="-0.3 -1.3 0.9" material="goal_net_mat"
                  contype="0" conaffinity="0"/>
            <geom name="net_sideR_L" type="box" size="0.3 0.01 0.9"
                  pos="-0.3  1.3 0.9" material="goal_net_mat"
                  contype="0" conaffinity="0"/>
            <geom name="net_top_L" type="box" size="0.3 1.3 0.01"
                  pos="-0.3 0 1.8" material="goal_net_mat"
                  contype="0" conaffinity="0"/>
        </body>

        <body name="goal_right" pos="11 0 0">

            <!-- front goal post -->
            <geom type="capsule" size="0.05 0.9"
                  fromto="0 -1.3 0 0 -1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.9"
                  fromto="0  1.3 0 0  1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.8"
                  fromto="0 -1.3 1.8 0 1.3 1.8" rgba="1 1 1 1"/>

            <!-- crossbar connectors -->
            <geom type="capsule" size="0.05 0.8"
                  fromto="0 -1.3 1.8 0.6 -1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.8"
                  fromto="0 1.3 1.8 0.6 1.3 1.8" rgba="1 1 1 1"/>

            <!-- back goal post -->
            <geom type="capsule" size="0.05 0.9"
                  fromto="0.6 -1.3 0 0.6 -1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.9"
                  fromto="0.6  1.3 0 0.6 1.3 1.8" rgba="1 1 1 1"/>
            <geom type="capsule" size="0.05 0.8"
                  fromto="0.6 -1.3 1.8 0.6 1.3 1.8" rgba="1 1 1 1"/>

            <geom name="net_back_R" type="box" size="0.01 1.3 0.9"
                  pos="0.6 0 0.9" material="goal_net_mat"
                  contype="0" conaffinity="0"/>
            <geom name="net_sideL_R" type="box" size="0.3 0.01 0.9"
                  pos="0.3 -1.3 0.9" material="goal_net_mat"
                  contype="0" conaffinity="0"/>
            <geom name="net_sideR_R" type="box" size="0.3 0.01 0.9"
                  pos="0.3  1.3 0.9" material="goal_net_mat"
                  contype="0" conaffinity="0"/>
            <geom name="net_top_R" type="box" size="0.3 1.3 0.01"
                  pos="0.3 0 1.8" material="goal_net_mat"
                  contype="0" conaffinity="0"/>
        </body>

    </worldbody>
</mujoco>
